<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/backimg"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/ic_back_arrow"
            android:visibility="gone" />


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/white"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <customfonts.TextView_opensans_bold
                android:id="@+id/booking_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/calendarView"
                android:background="#EEEEEE"
                android:elevation="@dimen/_2sdp"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="@string/options"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />


            <RelativeLayout
                android:id="@+id/editLeadFormCon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/arrow_img"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/ic_arrow" />


                <LinearLayout
                    android:id="@+id/text_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/arrow_img"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">


                    <customfonts.TextView_opensans_bold
                        android:id="@+id/title_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Edit Lead Form"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />


                    <customfonts.TextView_opensans_light
                        android:id="@+id/description_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Configure your lead capture form"
                        android:textColor="#222222"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/text_container"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="#80B6B6B6">


                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/helpContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/arrow_img1"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/ic_arrow" />


                <LinearLayout
                    android:id="@+id/text_container1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/arrow_img1"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">


                    <customfonts.TextView_opensans_bold
                        android:id="@+id/title_tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Help"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />


                    <customfonts.TextView_opensans_light
                        android:id="@+id/description_tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Find out out how to use the app"
                        android:textColor="#222222"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/text_container1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="#80B6B6B6">


                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/logout_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/arrow_img2"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/ic_arrow" />


                <LinearLayout
                    android:id="@+id/text_container2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/arrow_img2"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">


                    <customfonts.TextView_opensans_bold
                        android:id="@+id/title_tv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Logout"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />


                    <customfonts.TextView_opensans_light
                        android:id="@+id/description_tv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="You will need to re-enter your details next time"
                        android:textColor="#222222"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/text_container2"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="#80B6B6B6">


                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/frame_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>
</RelativeLayout>